{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCP Wallet",
  "version": "0.1.0",
  "identifier": "io.symbia.mcp-wallet",
  "build": {
    "beforeDevCommand": { "script": "npm run dev", "cwd": "ui" },
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": { "script": "npm run build", "cwd": "ui" },
    "frontendDist": "ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Symbia Labs MCP Wallet",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "../../../target/release/mcp-wallet-server"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Symbia Labs",
    "copyright": "Copyright (c) 2026 Symbia Labs",
    "category": "Utility",
    "shortDescription": "Secure MCP gateway for API integrations",
    "longDescription": "A secure desktop wallet for managing API credentials and exposing them via MCP protocol to AI assistants like Claude.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    }
  }
}
